.video-block {
  clear:left;
  background: #EEE;
  overflow: auto;
  margin-bottom: 10px;
  padding: 15px;
  cursor: pointer;
}
.video-block img {
  float:left;
  margin:0;
}
.video-block .vid-desc {
  margin-left: 135px;
}
.video-block h3 {
  font-size: 14px;
  line-height: 16px;
  color: #666;
  padding: 0;
  margin: 0;
}
.video-block:hover {
  background: #F1EFC6;
}
