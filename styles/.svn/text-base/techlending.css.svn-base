div.grid-8 {
		margin-bottom:20px;
    }
div.cleft {
		clear:left;
}
.view-id-devices_device {
    line-height: 16px;
}
.view-id-devices_device .view-header {
    width: 165px;
    display:block;
    float:left;
    margin-right: 32px;
}
.view-id-devices_device .view-content {
    display: inline-block;
    }
.view-id-devices_device .views-row {
    margin-bottom:6px;
}
.view-id-devices_device span#Apple {
    background:url("/sites/default/files/icons/availability-sprite.png") no-repeat;
    width: 18px;
    height: 18px;
    display:block;
    float: left;
}
.view-id-devices_device span#Lenovo {
    background: url("/sites/default/files/icons/availability-sprite.png") no-repeat -104px 0;
    width: 18px;
    height: 18px;
    display:block;
    float: left;
}
.view-id-devices_device span.number {
    background: url("/sites/default/files/icons/availability-sprite.png") -124px 0 no-repeat;
    width: 76px;
    height: 18px;
    display:block;
    margin-left: 23px;
}
.view-id-devices_device span.a0 {
		background: url("/sites/default/files/icons/availability-sprite.png") -58px 0 no-repeat;
		width: 42px;
		height: 18px;
    display:block;
}

.view-id-devices_device span.a1,
.view-id-devices_device span.a2,
.view-id-devices_device span.a3,
.view-id-devices_device span.a4,
.view-id-devices_device span.a5  {
    background: url("/sites/default/files/icons/availability-sprite.png") -20px 0 no-repeat;
    width: 36px;
    height: 18px;
    display:block;
    margin-left: 23px;
}
/* revamped laptop availability */
.availability {
    display: none;
    margin: -10px 0 0 17px;
}
.hunt {
    clear: left;
}
.availability .row {
    line-height: 1.3;
    margin-right: 16px;
    background: #E9E9E9;
    border-radius: 0.5em;
    padding: 1px 4px;
    margin-top: 4px;
    float: left;
}
.availability .row i {
    width: 15px;
    display: inline-block;
}
.tab {
    float: left;
    margin-right: 10px;
    width: 75px;
}
.numbers {
    float: left;
}
#page .availability p {
    margin-bottom: 0;
}
