/* Giving specific styles */
/* created: seteaguerector 2011 */

#signature {
	float: right;
	margin-right: 100px;
}

/* top navigation and logo */
#nav_container {display: none;}

#giving-logo {
	position: relative;
	float: left;
	margin-bottom: 20px;
}
.banner-margin-top {
	margin-top: 10px;
}
#block-menu-menu-main-nav-giving {
	position: absolute;
	top: 270px;
	left: 800px;
	width: 300px;
}

#block-menu-menu-main-nav-giving ul {
	float: right;
	padding: 0;
}
#block-menu-menu-main-nav-giving ul li {
	background: none;
	display: inline-block;
	font-size: 1.0em;
	padding:0;
	margin: 0;

}
#block-menu-menu-main-nav-giving   ul li a{
	display: inline-block;
	padding: 5px;
	color: #fff;
	font-weight: bold;
	}
#block-menu-menu-main-nav-giving   ul li a:hover {
	text-decoration: none;
	color: #ccc;
}


#page h1 {
	border-bottom: none;
	margin-top: 10px;
}

/* staff view for giving */
.view-giving-staff .item-list ul li {
	background: none;
	padding: 0;
	margin: 0;
	line-height: 30px;
	margin-bottom: 30px;
	
}
.view-giving-staff .views-field-title {
	font-size: 20px;
}

.views-field-field-staff-image-nid img {
	float:left;
	padding: 4px;
	border: 1px solid #ddd;
	margin: 0 20px 20px 0;
	clear: left;
}
.view-fol-news .view-content .item-list ul li {
	border-top: 1px solid #ccc;
	background: none;
	padding:20px 0 20px 0;
	margin:10px 0 10px 0;
}
.view-fol-news .views-field-title a {
	font-size: 20px;
}
.view-fol-news .views-field-timestamp {
	padding: 5px 0 5px 0;
	font-weight: bold;
}